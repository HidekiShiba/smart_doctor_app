<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h5 class="ml-5 mt-4 mb-3">商品編集画面</h5>
        <%= form_with model: @information, url: admin_information_path, local:true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
         <table>
          <tr>
            <th><h6>テーマ</h6></th>
            <th><%= f.collection_select(:theme_id, @themes, :id, :name, {prompt: "投稿テーマを選択してください"}) %></th>
          </tr>
          <tr>
            <th><h6>投稿画像</h6></th>
            <th><%= f.attachment_field :image %></th>
          </tr>
          <tr>
            <th><h6>件名</h6></th>
            <th><%= f.text_field :subject %></th>
          </tr>
          <tr>
            <th><h6>本文</h6></th>
            <th><%= f.text_area :body %></th>
          </tr>
          <tr>
            <th><%= f.submit '変更を保存',class:"btn btn-sm btn-success" %></th>
          </tr>
         </table>
        <% end %>
    </div>
  </div>
</div>