<div class="container px-5 px-sm-0">
  <div class="row">
    <% if @range == "Information" %>
      <h2>"<%= @word %>"の検索結果：<%= @informations.count %>件</h2>
      <% if @informations.count == 0 %>
        <div class="w-100">条件にあてはまる検索結果はありません</div>
      <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>お知らせID</th>
            <th>テーマ</th>
            <th>投稿画像</th>
            <th>件名</th>
          </tr>
        </thead>
        <tbody>
          <% @informations.each do |information| %>
            <tr>
              <td><%= information.id %></td>
              <td><%= information.theme.name %></td>
              <td><%= link_to attachment_image_tag(information, :image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60"), information_path(information.id) %></td>
              <td><%= link_to information.subject, information_path(information.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    <% end %>
  </div>
</div>

