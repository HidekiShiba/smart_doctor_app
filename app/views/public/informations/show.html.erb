<%= form_with url: search_path, method: :get, local: :true do |f| %>
      <%= f.select :range, options_for_select(['Information']) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"], ["前方一致","forward_match"], ["後方一致","backward_match"]]) %>
      <%= f.text_field :word %>
      <%= f.submit "検索" %>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-10 offset-1">
    <h5 class="ml-5 mt-5">お知らせ詳細</h5>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <table class="table-sm">
        <tr>
          <td><h6>テーマ</h6></td>
          <td><%= @information.theme.name %></td>
        </tr>
        <tr>
          <td><h6>件名</h6></td>
          <td><%= @information.subject %></td>
        </tr>
        <tr>
          <td><h6>お知らせ画像</h6></td>
          <td><%= attachment_image_tag @information, :image, fallback: "no_image.jpg", size: "240x200" %></td>
        </tr>
        <tr>
          <td><h6>詳細</h6></td>
          <td><%= @information.body %></td>
        </tr>
          <p id="favorite-btn-<%= @information.id %>"><%= render "public/favorites/favorite-btn", information: @information %></p>
      </table>
    </div>
  </div>
</div>
