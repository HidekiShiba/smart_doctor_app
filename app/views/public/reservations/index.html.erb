<div id="calendar"></div>
<div class="modal" id="new_reservation" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">新規予約</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group field">
          <%= form_with(model: @new_reservation, remote: true) do |f| %>
            <div class="form-inputs">

 
              <div class="form-group">
                <%= f.label :start_time, "開始時間", class: "form-control-label"%>
                <div class="input-group" data-target-input="nearest">
                  <%= f.text_field :start_time, class: "form-control input-start"%>
                </div>
              </div>
 
              <div class="form-group">
                <%= f.label :end_time, "終了予定時間", class: "form-control-label"%>
                <div class="input-group" data-target-input="nearest">
                  <%= f.text_field :end_time, class: "form-control input-end"%>
                </div>
              </div>
            </div>
 
            <div class="modal-footer actions">
              <%= f.submit "予約完了", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
